generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProfileRole {
  USER
  ADMIN
}

enum AccountType {
  STUDENT
  TEACHER
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
  BLOCKED
  CLOSED
}

model Profile {
  id          String      @id // Clerk userId
  email       String      @unique
  firstName   String?
  lastName    String?
  fullName    String?
  birthDate   DateTime?
  address     String?
  avatarUrl   String?
  bio         String?
  phoneNumber String?
  role        ProfileRole @default(USER)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt()

  accounts          Account[]
  selectedAccountId String?   @unique
}

model Account {
  id        String        @id @default(cuid())
  profileId String
  type      AccountType
  status    AccountStatus @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  profile Profile @relation(fields: [profileId], references: [id])

  teachers StudentTeacher[] @relation("StudentTeachers")
  students StudentTeacher[] @relation("TeacherStudents")

  @@unique([profileId, type])
}

model StudentTeacher {
  id        String @id @default(cuid())
  studentId String
  teacherId String

  student Account @relation("StudentTeachers", fields: [studentId], references: [id])
  teacher Account @relation("TeacherStudents", fields: [teacherId], references: [id])

  createdAt DateTime @default(now())

  @@unique([studentId, teacherId])
}
